---
import Button from './Button.astro';
import InputCheckbox from './InputCheckbox.astro';
import InputSelect from './InputSelect.astro';
import InputText from './InputText.astro';
import InputRadio from './InputRadio.astro';
---

<div id='container'>
  <h2>Buttons</h2>
  <div class='button-container'>
    <Button> Primary Button </Button>
    <Button variant='secondary'> Secondary Button </Button>
  </div>
  <h2>Inputs</h2>
  <form>
    <InputText name='fullName' label='full name' placeholder='Enter your full name' />
    <InputSelect
      name='country'
      label='country'
      placeholder='Select the country'
      options={[
        { value: 'cz', label: 'Czech Republic' },
        { value: 'sk', label: 'Slovakia' },
        { value: 'de', label: 'Germany' },
      ]}
    />
    <InputCheckbox name='check' label='I agree to the terms and conditions' />
    <InputRadio name='radio' label='Vue' />
  </form>
</div>

<style>
  #container {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
  }

  h2 {
    color: var(--brand-text);
    font-size: 2rem;
  }

  .button-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 600px;
    width: 100%;
  }

  @media (max-width: 768px) {
    #container {
      padding: var(--spacing-6);
    }

    .button-container {
      flex-direction: column;
    }
  }
</style>
