---
interface Props {
  label: string;
  name: string;
  placeholder?: string;
  autoComplete?: string;
  disabled?: boolean;
  bordered?: boolean;
}

const { label, name, placeholder, disabled = false, bordered = true } = Astro.props;
---

<div class={`input-checkbox ${bordered ? 'input-checkbox--border' : 'input-checkbox--no-border'}`}>
  <label for={name} class={`font-p2  ${disabled ? 'input-checkbox__label--disabled' : 'input-checkbox__label'}`}>
    {label}
  </label>
  <input
    id={name}
    type='checkbox'
    name={name}
    placeholder={placeholder}
    class='input-checkbox__input'
    disabled={disabled}
  />
</div>

<style>
  .input-checkbox {
    align-items: center;
    display: flex;
    flex-direction: row-reverse;
    gap: 0.5rem;
    justify-content: flex-end;
    padding: var(--spacing-5, --spacing-6);
  }

  .input-checkbox--border {
    border: 1px solid var(--secondary-border);
    background-color: var(--primary-surface);
    border-radius: var(--radius-medium);

    &:hover {
      border: 1px solid var(--primary-border);
    }

    &:active {
      border: 2px solid var(--primary-border);
    }
  }

  .input-checkbox--no-border {
    border: none;
    background-color: transparent;
    padding: 0;
  }

  .input-checkbox__label {
    color: var(--primary-text);
  }

  .input-checkbox__label:not(:checked) {
    color: var(--secondary-text);
  }

  .input-checkbox__label--disabled {
    color: var(--disabled-text);
    cursor: not-allowed;
  }

  .input-checkbox__input {
    color: var(--primary-text);
    outline: none;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    border: 1px solid var(--primary-border);
    border-radius: var(--radius-small);
    width: 20px;
    height: 20px;
    position: relative;
    background-color: white;
    box-sizing: border-box;
    cursor: pointer;

    &:focus:not(:disabled) {
      outline: var(--focus-outline) solid 2px;
      outline-offset: 1px;
    }

    &:active:not(:focus):not(:disabled) {
      outline: var(--focus-outline) solid 2px;
      outline-offset: 1px;
    }

    &:checked {
      background-color: var(--invert-surface);
    }

    &:disabled {
      background-color: var(--disabled-surface);
      border: 1px solid var(--minimal-border);
      color: var(--disabled-text);
      cursor: not-allowed;
    }
  }

  .input-checkbox:has(.input-checkbox__input:checked):has(.input-checkbox--border) {
    border: 1px solid var(--primary-border);

    &:active {
      border: 2px solid var(--primary-border);
    }
  }

  .input-checkbox:has(.input-checkbox__input:disabled) {
    background-color: var(--disabled-surface);
    border: 1px solid var(--minimal-border);
    color: var(--disabled-text);
    cursor: not-allowed;
  }

  .input-checkbox__input:active:not(:focus):not(:disabled)::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 10px;
    height: 2px;
    background-color: var(--primary-surface);
    transform: translate(-50%, -50%);
  }

  .input-checkbox:active .input-checkbox__input:not(:focus):not(:disabled)::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    width: 10px;
    height: 2px;
    background-color: var(--primary-surface);
    transform: translate(-50%, -50%);
  }

  .input-checkbox__input:checked::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 45%;
    width: 5px;
    height: 10px;
    border: solid var(--invert-border);
    border-width: 0 2px 2px 0;
    transform: translate(-50%, -50%) rotate(45deg);
  }
</style>
